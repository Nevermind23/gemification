<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <org.webrtc.SurfaceViewRenderer android:id="@+id/local_renderer" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/operator_badge" android:background="@drawable/operator_badge" android:visibility="gone" android:layout_width="143dp" android:layout_height="28dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_alignParentTop="true">
        <ImageView android:layout_gravity="left" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:src="@drawable/call_indicator_green"/>
        <TextView android:textSize="14dp" android:textColor="#1b1b1d" android:layout_width="wrap_content" android:layout_height="20dp" android:text="@string/operator_badge_title"/>
        <RelativeLayout android:background="@drawable/videocall_timer" android:layout_width="48dp" android:layout_height="20dp" android:layout_alignParentLeft="true">
            <Chronometer android:textSize="14dp" android:textColor="#1b1b1d" android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/call_duration" android:paddingBottom="2dp" android:layout_width="36dp" android:layout_height="20dp" android:layout_centerInParent="true" android:lineSpacingExtra="-1.75sp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/dark_view" android:background="#77000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true">
        <RelativeLayout android:id="@+id/queue_info_group" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="35sp" android:textColor="@color/white" android:gravity="top" android:id="@+id/queue_length" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="120dp" android:text="1" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/line_number" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videocall_your_line_number" android:layout_below="@+id/queue_length" android:layout_centerInParent="true" android:textAlignment="center"/>
            <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videocall_operator_will_answer_soon" android:layout_below="@+id/line_number" android:layout_centerInParent="true" android:textAlignment="center"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/connecting_status" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videocall_connecting" android:layout_centerInParent="true" android:textAlignment="center"/>
    <com.identomat.subfragments.views.DocumentView android:id="@+id/document_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/title_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scan Front Side Of Document" android:layout_above="@+id/document_view_holder" android:layout_centerHorizontal="true" android:textAlignment="center"/>
    <com.identomat.subfragments.views.HoldDocumentView android:id="@+id/document_hold_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/document_view_holder" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:translationY="-20dp">
        <TextView android:textColor="@color/white" android:id="@+id/progress_text_view" android:background="@drawable/identomat_indicator_info_text" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="" android:layout_below="@+id/indicator_view" android:layout_centerHorizontal="true" android:textAlignment="center"/>
        <RelativeLayout android:id="@+id/indicator_view" android:background="@drawable/identomat_indicator_view" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/indicator_icon" android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/identomat_ic_arrow_down"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/video_call_controls" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="32dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <ImageButton android:id="@+id/mute_call" android:background="#00000000" android:layout_width="70dp" android:layout_height="60dp" android:src="@drawable/mic_on_active" android:layout_centerHorizontal="true" android:elevation="2dp"/>
        <ImageButton android:id="@+id/swap_camera_view" android:background="#00000000" android:layout_width="70dp" android:layout_height="60dp" android:src="@drawable/videocall_flip_state" android:layout_centerHorizontal="true" android:elevation="2dp"/>
        <ImageButton android:id="@+id/switch_camera_view" android:background="#00000000" android:layout_width="70dp" android:layout_height="60dp" android:src="@drawable/videocall_rotate_state" android:layout_centerHorizontal="true" android:elevation="2dp"/>
        <ImageButton android:id="@+id/end_call_view" android:background="#00000000" android:layout_width="70dp" android:layout_height="60dp" android:src="@drawable/videocall_end_call_state" android:elevation="2dp"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/cancel_call_modal" android:background="@drawable/videocall_cancel_call_modal" android:visibility="gone" android:layout_width="260dp" android:layout_height="176dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <RelativeLayout android:layout_width="200dp" android:layout_height="67dp" android:layout_margin="20dp" android:layout_centerHorizontal="true">
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#1b1b1d" android:gravity="center" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/videocall_end_call_confirm_text" android:textAlignment="center" android:lineHeight="15dp"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginBottom="15dp" android:layout_alignParentBottom="true">
            <RelativeLayout android:id="@+id/cancel_cancel_call" android:background="@drawable/videocall_cancel_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="1dp" android:layout_marginRight="10dp" android:layout_marginBottom="1dp" android:layout_centerHorizontal="true" android:elevation="1dp">
                <TextView android:textSize="14dp" android:textColor="#5c5c99" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videocall_end_cancel_call" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/accept_cancel_call" android:background="@drawable/videocall_end_call_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp" android:layout_centerHorizontal="true" android:elevation="1dp">
                <TextView android:textSize="14dp" android:textColor="@color/white" android:gravity="center" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videocall_end_call" android:layout_centerInParent="true" android:textAllCaps="false" android:paddingHorizontal="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/operatot_busy_modal" android:background="@drawable/operatot_busy_modal" android:visibility="gone" android:layout_width="241dp" android:layout_height="204dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <RelativeLayout android:background="@drawable/operator_busy_modal_logo" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginTop="24dp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
            <View android:background="@drawable/operator_hang" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="14dp" android:textColor="#000000" android:gravity="center" android:layout_width="152dp" android:layout_height="20dp" android:text="@string/videocall_operators_busy" android:layout_centerInParent="true" android:lineSpacingExtra="4sp" android:translationY="-1.75sp" android:lineHeight="19dp"/>
        <View android:id="@+id/operator_busy_try_later" android:background="@drawable/operator_busy_try_later_button" android:layout_width="193dp" android:layout_height="44dp" android:layout_marginLeft="24dp" android:layout_marginTop="136dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <TextView android:textSize="14dp" android:textColor="#ffffff" android:gravity="top|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="20.47dp" android:layout_marginTop="148.28dp" android:text="@string/operator_busy_try_later" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="4sp" android:translationY="-1.75sp"/>
    </RelativeLayout>
</RelativeLayout>
