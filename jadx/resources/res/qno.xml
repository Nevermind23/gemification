<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/identomat_card_button" android:layout_width="match_parent" android:layout_height="60dp" android:layout_margin="5dp" android:elevation="1dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/icon_panel" android:background="@drawable/identomat_card_image_bg" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="10dp">
            <ImageView android:id="@+id/image_view" android:padding="7dp" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView android:layout_gravity="center" android:id="@+id/name_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:maxLines="2"/>
    </LinearLayout>
    <ImageView android:id="@+id/arrow_view" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="10dp" android:src="@drawable/identomat_arrow_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
