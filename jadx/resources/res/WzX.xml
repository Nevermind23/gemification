<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <ImageView android:layout_gravity="center" android:id="@+id/back_button" android:layout_width="30dp" android:layout_height="match_parent" android:src="@drawable/identomat_back_arrow"/>
        <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/back_button_title_view" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="" android:textAlignment="center"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/main_panel" android:background="@drawable/identomat_again_instruction_bg" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_centerInParent="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:elevation="1dp">
        <ImageView android:layout_gravity="center" android:id="@+id/again_image_view" android:layout_width="140dp" android:layout_height="140dp" android:layout_marginTop="30dp" android:src="@drawable/identomat_retry_icon"/>
        <TextView android:textSize="18dp" android:textColor="@color/white" android:id="@+id/record_begin_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/identomat_scan_retry_title"/>
        <TextView android:textColor="@color/white" android:id="@+id/record_instructions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="@string/identomat_scan_retry_instruction" android:textAlignment="center"/>
        <RelativeLayout android:id="@+id/retry_button" android:background="@drawable/identomat_button" android:layout_width="200dp" android:layout_height="45dp" android:layout_marginTop="60dp" android:layout_marginBottom="20dp" android:elevation="1dp">
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/retry_button_text" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/identomat_scan_retry_again" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/cancel_button" android:background="@drawable/identomat_button" android:visibility="gone" android:layout_width="200dp" android:layout_height="45dp" android:layout_marginTop="10dp" android:layout_marginBottom="20dp" android:elevation="1dp">
            <TextView android:textColor="@color/white" android:id="@+id/cancel_button_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/identomat_scan_retry_cancel" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
