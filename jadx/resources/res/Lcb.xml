<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="@dimen/car_number_view_diameter" android:layout_height="@dimen/car_number_view_diameter">
    <ImageView android:layout_gravity="center" android:id="@+id/semi_circle_view" android:background="@drawable/clip_semi_circle" android:layout_width="match_parent" android:layout_height="match_parent"/>
