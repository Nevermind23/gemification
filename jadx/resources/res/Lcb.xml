        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="3">
            <ImageView android:layout_gravity="center" android:background="@drawable/ic_ge" android:layout_width="@dimen/car_number_view_flag_size" android:layout_height="@dimen/car_number_view_flag_size"/>
            <TextView android:textSize="@dimen/car_number_view_flag_sub_text_size" android:textColor="@color/bog_white_color" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/ge" android:textAlignment="center" android:layout_marginStart="2dp"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/car_number_view_text_size" android:textStyle="bold" android:textColor="@color/bog_black_color" android:gravity="top" android:layout_gravity="center" android:id="@+id/car_number_tv" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="7"/>
    </LinearLayout>
</FrameLayout>
