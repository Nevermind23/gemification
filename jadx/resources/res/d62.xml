<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/identomat_instruction_bg" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <TextView android:textSize="20sp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/record_begin_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/identomat_record_begin_title" android:maxLines="2" android:textAlignment="center"/>
        <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/record_instructions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/identomat_record_instructions" android:maxLines="2" android:textAlignment="center"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp">
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
                <ImageView android:id="@+id/neutral_face_icon_view" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/identomat_neutral_face_icon"/>
                <TextView android:textColor="@color/white" android:id="@+id/record_begin_section_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/identomat_record_begin_section_1"/>
            </LinearLayout>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="10dp" android:src="@drawable/identomat_ic_arrow_down_grey"/>
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
                <ImageView android:id="@+id/smile_face_icon_view" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/identomat_smile_face_icon"/>
                <TextView android:textColor="@color/white" android:id="@+id/record_begin_section_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/identomat_record_begin_section_2"/>
            </LinearLayout>
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="10dp" android:src="@drawable/identomat_ic_arrow_down_grey"/>
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
                <ImageView android:id="@+id/neutral_face_icon_view_2" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/identomat_neutral_face_icon"/>
                <TextView android:textColor="@color/white" android:id="@+id/record_begin_section_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/identomat_record_begin_section_3"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/agree_button" android:background="@drawable/identomat_button" android:layout_width="200dp" android:layout_height="50dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:elevation="1dp">
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/ready_button" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/identomat_im_ready"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
