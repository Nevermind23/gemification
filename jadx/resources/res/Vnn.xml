                <androidx.appcompat.widget.AppCompatTextView android:textAppearance="@style/TextSmallTitle1" android:textColor="@color/color_invert_component_tr_300" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/map_sliding_menu_list_item_details_container_top_margin" android:layout_marginRight="@dimen/map_sliding_menu_list_item_details_container_top_margin" android:text="|" android:maxLines="1"/>
