            <TextView android:textAppearance="@style/TextH4InvertComponents400Left" android:gravity="center" android:id="@+id/minutes_two" android:layout_width="@dimen/countdown_timer_text_width" android:layout_height="@dimen/countdown_timer_text_height" android:includeFontPadding="false"/>
