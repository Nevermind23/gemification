<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/main_panel" android:background="@drawable/identomat_agreement_background" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:elevation="1dp">
        <TextView android:textSize="18sp" android:textColor="@color/primary_color" android:id="@+id/upload_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:textAlignment="center"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:gravity="center" android:id="@+id/numeration_card_1" android:background="@drawable/identomat_numeration_bg" android:layout_width="40dp" android:layout_height="40dp" android:text="1" android:elevation="1dp"/>
            <TextView android:layout_gravity="center_vertical" android:id="@+id/upload_instructions_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/identomat_upload_instructions_1" android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:gravity="center" android:id="@+id/numeration_card_2" android:background="@drawable/identomat_numeration_bg" android:layout_width="40dp" android:layout_height="40dp" android:text="2" android:elevation="1dp"/>
            <TextView android:layout_gravity="center_vertical" android:id="@+id/upload_instructions_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/identomat_upload_instructions_2" android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:gravity="center" android:id="@+id/numeration_card_3" android:background="@drawable/identomat_numeration_bg" android:layout_width="40dp" android:layout_height="40dp" android:text="3" android:elevation="1dp"/>
            <TextView android:layout_gravity="center_vertical" android:id="@+id/upload_instructions_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/identomat_upload_instructions_3" android:maxLines="2"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/upload_button" android:background="@drawable/identomat_button" android:layout_width="200dp" android:layout_height="50dp" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:elevation="1dp">
            <TextView android:textColor="@color/white" android:id="@+id/upload_button_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/identomat_choose_file" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:visibility="gone" android:layout_width="wrap_content" android:layout_height="50dp"/>
    </LinearLayout>
</RelativeLayout>
