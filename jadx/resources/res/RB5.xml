<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/id_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/wizard_account_item_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <HorizontalScrollView android:layout_gravity="center" android:scrollbars="none" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/wizard_account_item_sub_accounts" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <View android:id="@+id/account_sub_item_divider" android:layout_width="16dp" android:layout_height="0dp"/>
                <include android:id="@+id/first_sub_account" layout="@layout/wizard_account_item_sub_account_item"/>
                <include android:id="@+id/second_sub_account" layout="@layout/wizard_account_item_sub_account_item"/>
                <include android:id="@+id/third_sub_account" layout="@layout/wizard_account_item_sub_account_item"/>
                <include android:id="@+id/fourth_sub_account" layout="@layout/wizard_account_item_sub_account_item"/>
                <include android:id="@+id/fifth_sub_account" android:visibility="gone" layout="@layout/wizard_account_item_sub_account_item"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <View android:id="@+id/wizard_account_item_outer_rect" android:background="?attr/wizard_rect_orange" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="2dp" android:layout_marginRight="15dp" android:alpha="0"/>
</FrameLayout>
