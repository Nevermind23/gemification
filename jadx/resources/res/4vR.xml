<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_invert_background_layer"/>
            <stroke android:width="1dp" android:color="?attr/color_primary_solid_df_500"/>
            <corners android:radius="@dimen/layer_radius_12"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_invert_background_additional"/>
            <corners android:radius="@dimen/layer_radius_12"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_invert_background_layer"/>
            <corners android:radius="@dimen/layer_radius_12"/>
        </shape>
    </item>
</selector>
