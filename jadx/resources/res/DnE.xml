<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/mainBackgroundView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/mainContainer" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:translationY="-55dp">
        <RelativeLayout android:id="@+id/mainLayout" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:id="@+id/animationFrameLayout" android:clipChildren="false" android:clipToPadding="false" android:layout_width="80dp" android:layout_height="80dp" android:layout_centerInParent="true">
                <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/animationBackgroundImageView" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/facetec_securing_camera_background_drawable"/>
                <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/animationForegroundImageView" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/facetec_securing_camera_foreground_drawable"/>
            </FrameLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/animationFrameLayout">
                <TextView android:textSize="20sp" android:textColor="@color/facetec_default_foreground" android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/messageTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:includeFontPadding="false" android:lineSpacingMultiplier="1.1" android:alpha="1" android:fontFamily="sans-serif-medium" android:textAlignment="center"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
