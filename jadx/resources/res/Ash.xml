            <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
            <p341ge.bog.designsystem.components.buttons.Button android:id="@+id/reset_release_notes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:fontFamily="@font/bog_bold" app:button_text="RESET RELEASE NOTES" app:button_type="1"/>
            <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
