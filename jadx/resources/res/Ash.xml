            <TextView android:textSize="12sp" android:textColor="@color/color_invert_component_tr_200" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="20dp" android:text="სერვერი" android:fontFamily="@font/bog_medium"/>
