                <p341ge.bog.designsystem.components.radiobutton.RadioButtonView android:textColor="@color/color_invert_component_tr_200" android:id="@+id/cb_theme_wm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/spacing_4" android:layout_marginBottom="@dimen/spacing_4" android:text="Wealth" android:textAllCaps="true" android:fontFamily="@font/bog_medium" android:layout_marginVertical="@dimen/spacing_4"/>
