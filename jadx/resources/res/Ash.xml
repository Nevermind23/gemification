            <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_invert_component_tr_200" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="20dp" android:text="Version Name" android:fontFamily="@font/bog_medium"/>
            <TextView android:textStyle="bold" android:textColor="@color/color_invert_component_tr_200" android:id="@+id/version_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="5dp" android:textAllCaps="true" android:fontFamily="@font/bog_medium"/>
            <View android:background="@drawable/divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
