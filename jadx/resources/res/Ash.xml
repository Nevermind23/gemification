                <p341ge.bog.designsystem.components.radiobutton.RadioButtonView android:id="@+id/dark_mode_auto" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Auto" android:layout_marginStart="@dimen/spacing_4"/>
